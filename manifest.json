{
  "manifest_version": 3,
  "name": "gradusAI - LeetCode Companion",
  "version": "1.0",
  "description": "Get AI-powered topic insights and step-by-step problem-solving guides for LeetCode.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://leetcode.com/problems/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "images/gradusAI-2_48x48.png",
    "128": "images/gradusAI.png"
  }
}
